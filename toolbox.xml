<category id="category_simfonia" name="%{BKY_SIMFONIA_CATEGORY}" colour="%{BKY_SIMFONIA_HUE}">
    <category id="category_arduino" name="%{BKY_ARDUINO_CATEGORY}" colour="%{BKY_ARDUINO_HUE}">
        <block type="arduino_pin_mode">
            <value name="PIN">
                <shadow type="arduino_pin_shadow">
                    <field name="PIN">0</field>
                </shadow>
            </value>
            <value name="MODE">
                <shadow type="arduino_pin_mode_mode_shadow"></shadow>
            </value>
        </block>
        <block type="arduino_pin_mode_mode_shadow"></block>
        <block type="arduino_pin_shadow"></block>
        <block type="arduino_digital_read">
            <value name="PIN">
                <shadow type="arduino_pin_shadow">
                    <field name="PIN">0</field>
                </shadow>
            </value>
        </block>
        <block type="arduino_digital_write"></block>
        <block type="arduino_analog_read"></block>
                <block type="arduino_analog_write">
            <value name="VALUE">
                <shadow type="math_number">
                    <field name="NUM">0</field>
                </shadow>
            </value>
        </block>
    </category>
    <category id="category_picar" name="%{BKY_PICAR_CATEGORY}" colour="%{BKY_PICAR_HUE}">
        <block type="picar_init"></block>
        <block type="picar_set_hand_range">
            <value name="RANGE">
                <shadow type="math_number">
                    <field name="NUM">170</field>
                </shadow>
            </value>
        </block>
        <block type="picar_resetPiCar"></block>
        <block type="picar_drive">
            <value name="POWER_L">
                <shadow type="math_number">
                    <field name="NUM">255</field>
                </shadow>
            </value>
            <value name="POWER_R">
                <shadow type="math_number">
                    <field name="NUM">255</field>
                </shadow>
            </value>
        </block>
        <block type="picar_stop"></block>
        <block type="picar_checkDistance"></block>
        <block type="picar_checkColor"></block>
        <block type="picar_inPosition"></block>
        <block type="picar_set_left_hand_angle">
            <value name="ANGLE">
                <shadow type="math_number">
                    <field name="NUM">180</field>
                </shadow>
            </value>
        </block>
        <block type="picar_set_right_hand_angle">
            <value name="ANGLE">
                <shadow type="math_number">
                    <field name="NUM">0</field>
                </shadow>
            </value>
        </block>
        <block type="picar_closeHands"></block>
        <block type="picar_openHands"></block>
        <block type="picar_set_led_color"></block>
        <block type="picar_flashingLight"></block>
        <block type="picar_easterEgg">
            <value name="TEMPO">
                <shadow type="math_number">
                    <field name="NUM">1000</field>
                </shadow>
            </value>
        </block>
    </category>
    <category id="category_coding" name="%{BKY_CODING_CATEGORY}" colour="%{BKY_CODING_HUE}">
        <block type="coding_raw_statement"></block>
        <block type="coding_raw_input"></block>
        <block type="coding_raw_definition"></block>
        <block type="coding_raw_wrapper"></block>
    </category>
</category>